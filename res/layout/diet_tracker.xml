                            android:textColor="@color/fooditemcolor" />

                        <TextView
                            android:id="@+id/dinnerselecteditemcount2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dip"
                            android:textColor="@color/countitemforfoodcolor"
                            android:textSize="@dimen/count_value" />
                    </RelativeLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:background="#BDBDBD" />

                    <RelativeLayout
                        android:id="@+id/selectdinneritem3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dip" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dip"
                            android:text="@string/FOOD_ITEM3"
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/dinnerselecteditem3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:textColor="@color/fooditemcolor" />

                        <TextView
                            android:id="@+id/dinnerselecteditemcount3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dip"
                            android:textColor="@color/countitemforfoodcolor"
                            android:textSize="@dimen/count_value" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
            <!-- dinner end -->
            <!-- snacks head line Start -->

            <RelativeLayout
                android:id="@+id/snackheadline"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dinnerparenttop"
                android:layout_marginTop="20dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/foodparenttop"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/head_curve"
                    android:padding="@dimen/food_time_head_padding"
                    android:text="Snacks"
                    android:textColor="@color/food_time_head_color"
                    android:textSize="@dimen/food_time_head_text_size" />
            </RelativeLayout>

            <!-- lunch head line end -->


            <!-- lunch food item end -->

            <RelativeLayout
                android:id="@+id/snackparenttop"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/snackheadline" >

                <LinearLayout
                    android:id="@+id/selectsnack"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:background="@drawable/all_page_side_curve"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/selectsnackitem1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dip" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
