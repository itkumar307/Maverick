                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dip"
                            android:textColor="@color/countitemforfoodcolor"
                            android:textSize="@dimen/count_value" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
            <!-- lunch end -->


            <!-- dinner head line Start -->

            <RelativeLayout
