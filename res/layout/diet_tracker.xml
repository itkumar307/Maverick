                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/breakfastselecteditem2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:textColor="@color/fooditemcolor" />

                        <TextView
                            android:id="@+id/breakfastselecteditemcount2"
