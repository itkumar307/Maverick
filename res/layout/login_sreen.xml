<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/relativeLayout1"
	android:layout_width="fill_parent"
	android:background="@color/allpage_side_page_color"
	android:layout_height="fill_parent">
	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<RelativeLayout
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:layout_margin="10dp">
				<ImageView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:background="@drawable/maveric_logo"
					android:layout_alignParentRight="true" />
			</RelativeLayout>
			<LinearLayout
				android:orientation="vertical"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/login_screen">
				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="fill_parent"
					android:layout_marginTop="15dip"
					android:src="@drawable/login_screen_side" />

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

					<!-- login with emailID start -->
					<LinearLayout
						android:id="@+id/login_with_email"
						android:visibility="gone"

						android:orientation="vertical"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">
						<RelativeLayout
							android:id="@+id/LOGIN_TITLE"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content">
							<TextView
								android:id="@+id/welcome"
								android:layout_marginTop="15dip"
								android:layout_marginLeft="20dip"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="Welcome"
								android:textColor="@color/allpage_subtitle" />
							<TextView
								android:layout_below="@+id/welcome"
								android:id="@+id/welcome_text"
								android:layout_marginTop="10dip"
								android:layout_marginLeft="20dip"
								android:layout_alignParentLeft="true"
								android:layout_toLeftOf="@+id/image"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@string/WELCOME_LOGINSCREEN" />
							<TextView
								android:layout_below="@+id/welcome_text"
								android:id="@+id/signup"
								android:paddingTop="5dip"
								android:layout_marginLeft="20dip"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="Sign up"
								android:textColor="@color/allpage_subtitle" />
							<TextView
								android:layout_below="@+id/signup"
								android:layout_marginTop="10dip"
								android:layout_toLeftOf="@+id/image"
								android:layout_marginLeft="20dip"
								android:layout_alignParentLeft="true"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@string/SIGNUP_LOGINSCREEN" />
							<ImageView
								android:id="@+id/image"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_alignParentRight="true"
								android:background="@drawable/login_screen_toy" />
						</RelativeLayout>
						<LinearLayout
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:orientation="vertical"
							android:layout_marginLeft="20dp"
							android:layout_marginRight="20dip"
							android:background="@drawable/trancparent_curve_all_page">
							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:padding="5dip"
								android:text="@string/EMAIL_ID"
								android:textColor="@color/login_page_content_text_color" />
							<EditText
								android:id="@+id/email_id"
								android:layout_margin="10dip"
								android:layout_width="fill_parent"
								android:layout_height="wrap_content" />
							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:padding="5dip"
								android:text="@string/PASSWORD"
								android:textColor="@color/login_page_content_text_color" />
							<EditText
								android:id="@+id/password"
								android:inputType="textPassword"
								android:layout_margin="10dip"
								android:layout_width="fill_parent"
								android:layout_height="wrap_content" />
						</LinearLayout>
						<RelativeLayout
							android:layout_width="fill_parent"
							android:padding="10dip"
							android:id="@+id/next"
							android:layout_margin="10dip"
							android:layout_height="wrap_content">
							<ImageView
								android:layout_width="wrap_content"
								android:layout_alignParentRight="true"
								android:src="@drawable/next"
								android:layout_height="wrap_content" />
						</RelativeLayout>
					</LinearLayout>
				</LinearLayout>
				<!-- login with email finish -->


				<!-- login with current detail start -->
				<LinearLayout
					android:id="@+id/login_with_current_detail"
					android:orientation="vertical"
					android:visibility="gone"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content">
					<RelativeLayout
						android:layout_below="@+id/slide_title"
						android:id="@+id/LOGIN_TITLE"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content">
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="10dip"
							android:layout_alignParentLeft="true"
							android:layout_toLeftOf="@+id/image"
							android:text="@string/LOGIN_TITLE_TEXT" />
						<ImageView
							android:id="@+id/image"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_alignParentRight="true"
							android:background="@drawable/login_screen_toy" />
					</RelativeLayout>
					<!-- login default description wit image end -->
					<!-- editbox group start -->
					<LinearLayout
						android:layout_below="@+id/LOGIN_TITLE"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="20dip"
						android:layout_marginRight="20dip"
						android:layout_marginTop="-5dip"
						android:background="@drawable/trancparent_curve_all_page"
						android:id="@+id/editbox_group"
						android:orientation="vertical">
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="5dip"
							android:text="@string/CURRENT_HEIGHT"
							android:textColor="@color/login_page_content_text_color" />
						<EditText
							android:id="@+id/login_height"
							android:layout_margin="10dip"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="5dip"
							android:text="@string/CURRENT_WEIGHT"
							android:textColor="@color/login_page_content_text_color" />
						<EditText
							android:id="@+id/login_weight"
							android:layout_margin="10dip"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content" />
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="5dip"
							android:text="@string/WAIST"
							android:textColor="@color/login_page_content_text_color" />
						<EditText
							android:id="@+id/login_waist"
							android:layout_margin="10dip"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content" />
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="5dip"
							android:text="@string/HIP"
							android:textColor="@color/login_page_content_text_color" />
						<EditText
							android:id="@+id/login_hip"
							android:layout_margin="10dip"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content" />
					</LinearLayout>
					<!-- editbox group end -->
					<RelativeLayout
						android:layout_width="fill_parent"
						android:padding="10dip"
						android:id="@+id/current_detail_next"
						android:layout_margin="10dip"
						android:layout_height="wrap_content">
						<ImageView
							android:layout_width="wrap_content"
							android:layout_alignParentRight="true"
							android:src="@drawable/next"
							android:layout_height="wrap_content" />
					</RelativeLayout>
				</LinearLayout>
				<!-- login with current detail end-->
				
				    <!-- login with target detail start -->
                <LinearLayout
                    android:id="@+id/login_with_target_detail"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/LOGIN_TITLE"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dip"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@+id/image"
                        android:text="@string/LOGIN_TITLE_TEXT" />
                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/login_screen_toy" />
                </RelativeLayout>
                <!-- login default description wit image end -->
                <!-- editbox group start -->
                <LinearLayout
                    android:layout_below="@+id/LOGIN_TITLE"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:layout_marginTop="-5dip"
                    android:background="@drawable/trancparent_curve_all_page"
                    android:id="@+id/editbox_group"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dip"
                        android:text="@string/TARGET_HEIGHT"
                        android:textColor="@color/login_page_content_text_color" />
                    <EditText
                        android:id="@+id/TARGET_HEIGHT"
                        android:layout_margin="10dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dip"
                        android:text="@string/TARGET_WEIGHT"
                        android:textColor="@color/login_page_content_text_color" />
                    <EditText
                        android:id="@+id/TARGET_WEIGHT"
                        android:layout_margin="10dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dip"
                        android:text="@string/TARGET_HIP"
                        android:textColor="@color/login_page_content_text_color" />
                    <EditText
                        android:id="@+id/TARGET_HIP"
                        android:layout_margin="10dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dip"
                        android:text="@string/CURRENT_BMI"
                        android:textColor="@color/login_page_content_text_color" />
                    <EditText
                        android:id="@+id/CURRENT_BMI"
                        android:layout_margin="10dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <!-- editbox group end -->
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:padding="10dip"
                    android:id="@+id/target_detail_next"
                    android:layout_margin="10dip"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/next"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
        <!-- login with target detail end -->
        
        <!-- login with maveric ID start -->
                <LinearLayout
                    android:id="@+id/login_with_maveric_id"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/LOGIN_TITLE"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dip"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@+id/image"
                        android:text="@string/LOGIN_TITLE_TEXT" />
                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/login_screen_toy" />
                </RelativeLayout>
                <!-- login default description wit image end -->
                <!-- editbox group start -->
                <LinearLayout
                    android:layout_below="@+id/LOGIN_TITLE"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:layout_marginTop="-5dip"
                    android:background="@drawable/trancparent_curve_all_page"
                    android:id="@+id/editbox_group"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dip"
                        android:text="@string/MAVERIC_MEMBER"
                        android:textColor="@color/login_page_content_text_color" />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/redio_yes"
                            android:text="Yes" />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_toRightOf="@+id/redio_yes"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:id="@+id/radio_no"
                            android:text="No" />
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dip"
                        android:text="@string/MAVERIC_MEMBER_ID"
                        android:textColor="@color/login_page_content_text_color" />
                    <EditText
                        android:id="@+id/CURRENT_BMI"
                        android:layout_margin="10dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <!-- editbox group end -->
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:padding="10dip"
                    android:id="@+id/mavric_id_next"
                    android:layout_margin="10dip"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/next"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
            <!--  login with maveric ID end -->
				
				
			</LinearLayout>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="50dip"
			android:visibility="invisible"></LinearLayout>
	</LinearLayout>
	</ScrollView>
	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true">

		<include
			android:id="@+id/bottom"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			layout="@layout/menu" />
	</RelativeLayout>
</RelativeLayout>
