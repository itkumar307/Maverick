<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/allpage_side_page_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/maveric_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/maveric_logo" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/textscroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/maveric_title"
        android:background="@drawable/staticpagebg" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/whymaverickact"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/whymaverick" />

            <ImageView
                android:id="@+id/stressmanagementact"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/stressmanagement" />

            <ImageView
                android:id="@+id/knowyouract"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/knowurbasic" />

            <ImageView
                android:id="@+id/strengthact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/srengthtrainingbasics" />

            <ImageView
                android:id="@+id/warmupact"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/warmup" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:visibility="invisible" >
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <!-- Menu -->


