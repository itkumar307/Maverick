<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@color/allpage_side_page_color"
	android:orientation="vertical">

	<ScrollView
		android:id="@+id/textscroll"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_below="@+id/maveric_title"
		android:background="#fff">

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical">

			<RelativeLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:id="@+id/maveric_title"
				android:background="@drawable/green"
				android:padding="15dip"
				android:layout_marginBottom="10dp">
				<Button
					android:id="@+id/home_button"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_centerVertical="true"
					android:layout_marginLeft="5dip"
					android:background="@drawable/home_arrow"></Button>
				<ImageView
					android:id="@+id/img"
					android:layout_width="150dp"
					android:layout_height="50dp"
					android:layout_alignParentRight="true"
					android:background="@drawable/maveric_logo" />
			</RelativeLayout>

			<TextView
				android:id="@+id/whymaverickact"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:layout_marginTop="10dip"
				android:layout_marginLeft="20dp"
				android:textColor="#0AAEDC"
				android:textSize="20dp"
				android:textStyle="bold"
				android:text="Why Maverick?" />

			<TextView
				android:id="@+id/stressmanagementact"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:layout_marginTop="10dip"
				android:layout_marginLeft="20dp"
				android:textColor="#0AAEDC"
				android:textSize="20dp"
				android:textStyle="bold"
				android:text="Basics of stress management" />

			<TextView
				android:id="@+id/knowyouract"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:layout_marginTop="10dip"
				android:layout_marginLeft="20dp"
				android:textColor="#0AAEDC"
				android:textSize="20dp"
				android:textStyle="bold"
				android:text="Know your Basics" />

			<TextView
				android:id="@+id/strengthact"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:layout_marginTop="10dip"
				android:layout_marginLeft="20dp"
				android:textColor="#0AAEDC"
				android:textSize="20dp"
				android:textStyle="bold"
				android:text="Strength training Basics" />

			<TextView
				android:id="@+id/warmupact"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:layout_marginTop="10dip"
				android:layout_marginLeft="20dp"
				android:textColor="#0AAEDC"
				android:textSize="20dp"
				android:textStyle="bold"
				android:text="The how and why of warming-up" />
			<TextView
				android:id="@+id/ask_our_expert"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:layout_marginTop="10dip"
				android:layout_marginLeft="20dp"
				android:text="Ask our expert"
				android:textColor="#0AAEDC"
				android:visibility="gone"
				android:textSize="20dp"
				android:textStyle="bold" />
			<TextView
				android:id="@+id/expert_talk"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:layout_marginTop="10dip"
				android:layout_marginLeft="20dp"
				android:text="Expert talk"
				android:textColor="#0AAEDC"
				android:visibility="gone"
				android:textSize="20dp"
				android:textStyle="bold" />

			<TextView
				android:id="@+id/gif"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:layout_marginTop="10dip"
				android:layout_marginLeft="20dp"
				android:textColor="#0AAEDC"
				android:textSize="20dp"
				android:textStyle="bold"
				android:text="Exercise Demo" />

			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="55dip"
				android:visibility="invisible">
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
	<!-- Menu -->

</RelativeLayout>